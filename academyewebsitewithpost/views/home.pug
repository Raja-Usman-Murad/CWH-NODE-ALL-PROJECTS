extends base.pug
block scripts
    script
        script(src='/static/index.js')
block style
    style  
      include ../static/style.css
block content
    section#introSection
        div WELCOME TO USMAN'S FOOTBALL ACCADMY
        div.small Eat Sleep Football Repeat
    section#missionSection
        h2 OUR MISSION
        div.card
            h3 Create An Environment
            div.card-box
                div.card-img
                    img(src="/static/img/1.png")
                div.card-content
                    p The Academy will create an environment and culture which will challenge.
        div.card
            h3 Experience And Skills
            div.card-box
                div.card-img
                    img(src="/static/img/2.png")
                div.card-content
                    p The Academy will provide its players a range of experience and skills.
        div.card
            h3 Positive Life Experience
            div.card-box
                div.card-img
                    img(src="/static/img/3.png")
                div.card-content
                    p The Academy will provide all players with a positive life experience. 
    section#sponsorsSection
        h2 Our Sponsors
        div#sponsors
            img(src="/static/img/samsung.png", alt="sponsor img" , class="spImage")
            img(src="/static/img/adidas.png", alt="sponsor img" , class="spImage")
            img(src="/static/img/nike.png", alt="sponsor img" , class="spImage")
